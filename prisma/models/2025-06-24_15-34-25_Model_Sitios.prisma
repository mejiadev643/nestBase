model Sitios {
  id           String         @id @default(uuid()) @db.Uuid // Use UUID for id postgres native type
  nombre       String
  url          String
  deletedAt    DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  credenciales Credenciales[]

  @@unique([nombre, url])
  @@index([nombre])
  @@index([url])
  @@index([deletedAt])
}
